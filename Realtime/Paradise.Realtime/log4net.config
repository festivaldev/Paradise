<?xml version="1.0" encoding="utf-8" ?>
<log4net debug="false">
	<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="[%date{HH:mm:ss}] [%p] %m%n" />
		</layout>
	</appender>

	<appender name="CommLogFileAppender" type="log4net.Appender.RollingFileAppender">
		<file type="log4net.Util.PatternString" value="%property{Photon:ApplicationLogPath}\Paradise.Realtime.Comm.log" />
		<staticLogFileName value="true" />
		<preserveLogFileNameExtension value="true" />
		<appendToFile value="false" />
		<maxSizeRollBackups value="0" />
		<maximumFileSize value="512KB" />
		<rollingStyle value="Composite" />
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />

		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="[%date{yyyy-MM-ddTHH:mm:ss.fffZ}] [%p] %m%n" />
		</layout>
	</appender>

	<appender name="GameLogFileAppender" type="log4net.Appender.RollingFileAppender">
		<file type="log4net.Util.PatternString" value="%property{Photon:ApplicationLogPath}\Paradise.Realtime.Game.log" />
		<staticLogFileName value="true" />
		<preserveLogFileNameExtension value="true" />
		<appendToFile value="false" />
		<maxSizeRollBackups value="0" />
		<maximumFileSize value="512KB" />
		<rollingStyle value="Composite" />
		<lockingModel type="log4net.Appender.FileAppender+MinimalLock" />

		<layout type="log4net.Layout.PatternLayout">
			<param name="ConversionPattern" value="[%date{yyyy-MM-ddTHH:mm:ss.fffZ}] [%p] %m%n" />
		</layout>
	</appender>

	<root>
		<level value="INFO" />
		<appender-ref ref="ConsoleAppender" />
	</root>

	<logger name="CommLog">
		<level value="INFO" />
		<appender-ref ref="CommLogFileAppender" />
		<appender-ref ref="ConsoleAppender" />
	</logger>

	<logger name="GameLog">
		<level value="INFO" />
		<appender-ref ref="GameLogFileAppender" />
		<appender-ref ref="ConsoleAppender" />
	</logger>
</log4net>
